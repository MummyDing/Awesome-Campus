<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/card_margin"
    android:layout_marginRight="@dimen/card_margin"
    android:layout_marginTop="@dimen/card_margin"
    android:clipChildren="false"
    android:clipToPadding="false"
    app:cardBackgroundColor="?attr/cardViewColor"
    app:contentPadding="10dp">

    <!--折叠视图-->
    <com.ramotion.foldingcell.FoldingCell
        android:id="@+id/folding_cell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/cell_content_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--标题-->
                <TextView
                    android:id="@+id/date"
                    android:layout_margin="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016-04-30\n九月廿二"
                    android:textColor="?attr/textColor"
                    android:textSize="23sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="白天"
                    android:layout_marginTop="15dp"
                    android:textColor="?attr/textColor"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/dayInfo"
                    android:layout_marginTop="15dp"
                    android:textColor="?attr/textColor"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="夜间"
                    android:layout_marginTop="15dp"
                    android:textColor="?attr/textColor"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/nightInfo"
                    android:layout_marginTop="15dp"
                    android:textColor="?attr/textColor"
                    android:textSize="18sp"/>
            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/cell_title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/date_title"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-04-30\n九月廿二"
                android:layout_marginRight="100dp"
                android:textColor="?attr/textColor"
                android:textSize="23sp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/weather_icon_background"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="right"
                    android:orientation="horizontal"
                    android:background="@drawable/wideedgecircle">
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/weather_icon_small"
                        android:layout_width="70dp"
                        android:padding="14dp"
                        android:layout_height="70dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="20dp"
                        android:gravity="center"
                        android:src="@drawable/weather_baoyu"
                        android:textColor="?attr/textColor"
                        android:textSize="20sp" />

                </FrameLayout>


            </FrameLayout>

        </FrameLayout>


    </com.ramotion.foldingcell.FoldingCell>


</android.support.v7.widget.CardView>
